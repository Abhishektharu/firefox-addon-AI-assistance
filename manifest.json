{
  "manifest_version": 3,
  "name": "AI Assistant",
  "version": "1.0",
  "description": "Chat with AI",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
